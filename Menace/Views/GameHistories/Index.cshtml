@using Menace.ViewModels
@model IEnumerable<Noughts_and_Crosses.GameHistory>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.P1.Name)
            </td>
            <td>
                @PlayerHelper.GetPlayerType(item.P1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.P2.Name)
            </td>
            <td>
                @PlayerHelper.GetPlayerType(item.P2)
            </td>
        </tr>
}
    </tbody>
</table>
