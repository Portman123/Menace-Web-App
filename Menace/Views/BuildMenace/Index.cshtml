@{
}

@{
    ViewData["Title"] = "Build Menace";
}

<div class="text-center">
    <h1 class="display-4">Building Menace</h1>
    <p>Do you want your MENACE to be: Player 1 (the opening player) or Player 2 (the opponent of the opening player).</p>
    <div>
        <form asp-action="index">
            <div class="form-group">
                <input type="radio" asp-for="Type" value="0"/>
                <label asp-for="Type">Player 1 (Opening)</label><br>
                <input type="radio" asp-for="Type" value="1"/>
                <label asp-for="Type">Player 2 (Second Player)</label><br>
                <input type="submit" value="Build" class="btn btn-primary" />
            </div>
        </form>
    </div>
    
